{
  "name": "sonrac/lumen-league-oauth2",
  "description": "Lumen league oauth2 wrapper",
  "type": "library",
  "require": {
    "php": ">=7.0",
    "laravel/lumen-framework": "5.*",
    "symfony/psr-http-message-bridge": "^1.0",
    "league/oauth2-server": "^6.0",
    "zendframework/zend-diactoros": "^1.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.3",
    "fzaninotto/faker": "^1.7",
    "refinery29/php-cs-fixer-config": "^0.6.7",
    "squizlabs/php_codesniffer": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "sonrac\\lumenRest\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "sonrac\\lumenRest\\tests\\": "tests"
    }
  },
  "license": "MIT",
  "scripts": {
    "test": "phpunit --colors=never --coverage-text",
    "full-check": "php FullCheckProject.php",
    "fix-code": "php-cs-fixer fix",
    "test-coverage-html": "phpunit --coverage-html coverage",
    "review": "phpcs src && php vendor/bin/phpcs tests"
  },
  "authors": [
    {
      "name": "Donii Sergii",
      "email": "doniysa@gmail.com"
    }
  ],
  "minimum-stability": "stable"
}
